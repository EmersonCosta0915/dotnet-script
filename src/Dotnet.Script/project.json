{
  "version": "0.6.0-*",
  "description": "Dotnet CLI tool allowing you to run C# (CSX) scripts.",
  "authors": [ "filipw" ],
  "packOptions": {
    "summary": "Dotnet CLI tool allowing you to run C# (CSX) scripts.",
    "tags": [ "dotnet", "cli", "script", "csx", "csharp", "roslyn" ],
    "owners": [ "filipw" ],
    "title": "Dotnet.Script",
    "iconUrl": "https://raw.githubusercontent.com/filipw/Strathweb.TypedRouting.AspNetCore/master/strathweb.png",
    "projectUrl": "https://github.com/filipw/dotnet-script",
    "licenseUrl": "https://github.com/filipw/dotnet-script/blob/master/LICENSE",
    "requireLicenseAcceptance": false,
    "repository": {
      "type": "git",
      "url": "https://github.com/filipw/dotnet-script.git"
    }
  },
  "buildOptions": {
    "emitEntryPoint": true,
    "outputName": "dotnet-script",
    "debugType": "portable"
  },

  "dependencies": {
    "Dotnet.Script.Core": "*",
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.1"
    },
    "Microsoft.Extensions.CommandLineUtils": "1.0.0"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    }
  }
}
